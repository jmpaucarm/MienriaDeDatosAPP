<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ec.edu.uce.vista.Inicio">

    <LinearLayout
        android:layout_width="257dp"
        android:layout_height="280dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tituloMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginVertical="30dp"
            android:text="GRUPO 06"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/vehiculosBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:onClick="btnVehiculos"
            android:text="VEHICULOS" />

        <Button
            android:id="@+id/reservasBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnReservas"
            android:text="NUEVA RESERVA" />

        <Button
            android:id="@+id/conreservasBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnConsultarReservas"
            android:text="CONSULTAR RESERVA" />



    </LinearLayout>

</android.support.constraint.ConstraintLayout>
