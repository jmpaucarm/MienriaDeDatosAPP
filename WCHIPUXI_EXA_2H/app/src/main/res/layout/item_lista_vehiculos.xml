<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagenLV"
            android:layout_width="300dp"
            android:layout_height="145dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/img_base" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/placaLV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Placa"/>

            <TextView
                android:id="@+id/marcaLV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marca"/>

            <TextView
            android:id="@+id/fechaLV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha"/>

            <TextView
                android:id="@+id/costoLV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Costo"/>

            <TextView
                android:id="@+id/matriculadoLV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Matriculado"/>


            <TextView
                android:id="@+id/colorLV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Color"/>

            <TextView
                android:id="@+id/tipoLV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo"/>

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>